{
    "manifest_version": 3,
    "name": "Smart Bookmark",
    "version": "1.1.7",
    "description": "A smart bookmark manager with auto-tagging and natural language search.",
    "icons": {
        "16": "icons/saved_16.png",
        "32": "icons/saved_32.png",
        "48": "icons/saved_48.png",
        "128": "icons/saved_128.png"
    },
    "action": {
        "default_icon": {
            "16": "icons/saved_16.png",
            "32": "icons/saved_32.png",
            "48": "icons/saved_48.png",
            "128": "icons/saved_128.png"
        },
        "default_title": "Smart Bookmark",
        "default_popup": "quickSave.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "side_panel": {
        "default_path": "popup.html"
    },
    "options_page": "settings.html",
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "scripting",
        "sidePanel",
        "bookmarks",
        "unlimitedStorage",
        "favicon"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*",
                "videos/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "omnibox": {
        "keyword": "sb"
    },
    "commands": {
        "quick-search": {
            "suggested_key": {
                "default": "Ctrl+K",
                "mac": "Command+K"
            },
            "description": "搜索书签"
        },
        "quick-save": {
            "suggested_key": {
                "default": "Ctrl+B",
                "mac": "Command+B"
            },
            "description": "添加书签"
        }
    },
    "externally_connectable": {
        "matches": [
            "http://localhost:8080/*"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "http://localhost:8080/*"
            ],
            "js": [
                "versionCheck.js"
            ],
            "run_at": "document_idle"
        }
    ]
}